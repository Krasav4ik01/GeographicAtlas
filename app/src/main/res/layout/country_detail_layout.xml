<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:backgroundTint="#F7F8F9"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp"
    android:paddingVertical="5dp"
    >


    <ImageView android:id="@+id/detailFlagImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/detailFlagImage"
        android:background="@drawable/item_view_shape"
        android:paddingVertical="20dp"

        >



        <TextView android:id="@+id/tvDetailCapital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:maxLines="3"
            android:background="@drawable/item_view_shape"
            />
        <TextView android:id="@+id/tvCapitalCoordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:maxLines="3"
            android:background="@drawable/item_view_shape"
            />
        <TextView android:id="@+id/tvPopulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:maxLines="3"
            android:background="@drawable/item_view_shape"
            />
        <TextView android:id="@+id/tvArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:maxLines="3"
            android:background="@drawable/item_view_shape"
            />

                <TextView android:id="@+id/tvDetailCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:maxLines="3"
                    android:background="@drawable/item_view_shape"
                    />

        <TextView android:id="@+id/tvDetailRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@drawable/item_view_shape"
            />



    </LinearLayout>


</RelativeLayout>